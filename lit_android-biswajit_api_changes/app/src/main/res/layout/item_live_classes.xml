<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <carbon.widget.RelativeLayout
        android:id="@+id/rl_level_second"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_9sdp"
        android:background="@drawable/ic_classes"
        android:backgroundTintMode="add"
        android:foreground="@drawable/gradient"
        app:carbon_cornerRadius="@dimen/_8sdp">

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_video_thubline_inactive"
            android:contentDescription="video_thubline" />

        <ImageView
            android:id="@+id/iv_live_now"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/ic_live_tag"
            android:contentDescription="new tag"
            android:scaleType="center"
            android:visibility="gone" />

        <carbon.widget.TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="#CC0F0F0F"
            android:fontFamily="@font/futura_std_condensed_extra_bd"
            android:padding="@dimen/_5sdp"
            android:text="starts in 19h 28m"
            android:textAllCaps="true"
            android:textColor="@color/yellow"
            android:textSize="@dimen/_10ssp"
            app:carbon_cornerRadius="@dimen/_4sdp" />


    </carbon.widget.RelativeLayout>

    <TextView
        android:id="@+id/tv_video_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_level_second"
        android:layout_marginTop="@dimen/_11sdp"
        android:fontFamily="@font/futura_std_medium"
        android:lineSpacingExtra="4sp"
        android:singleLine="false"
        android:text="Resistance Row with Justin"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/_13ssp"
        android:translationY="-2.2sp" />

    <TextView
        android:id="@+id/tv_video_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_video_title"
        android:layout_marginTop="@dimen/_6sdp"
        android:fontFamily="@font/sf_pro_display_bold"
        android:lineSpacingExtra="6sp"
        android:singleLine="false"
        android:text=""
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/_10ssp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_start_workout"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_below="@+id/tv_video_time"
        android:layout_marginTop="@dimen/_15sdp"
        android:clickable="false"
        android:enabled="false"
        android:fontFamily="@font/futura_std_condensed_extra_bd"
        android:lineSpacingExtra="4sp"
        android:singleLine="true"
        android:text="Join now"
        android:textColor="@color/white"
        android:textSize="@dimen/_10ssp"
        android:visibility="visible"
        app:backgroundTint="@color/red"
        app:cornerRadius="@dimen/_6sdp"
        app:elevation="@dimen/_5sdp"
        app:strokeColor="@color/red"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_sign_me_up"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_below="@+id/btn_start_workout"
        android:layout_marginTop="@dimen/_15sdp"
        android:clickable="false"
        android:enabled="false"
        android:fontFamily="@font/futura_std_condensed_extra_bd"
        android:lineSpacingExtra="4sp"
        android:singleLine="true"
        android:text="Sign me up"
        android:textColor="@color/white"
        android:textSize="@dimen/_10ssp"
        android:visibility="visible"
        app:cornerRadius="@dimen/_6sdp"
        app:elevation="@dimen/_5sdp"
        app:strokeColor="@color/red"
        app:strokeWidth="1dp" />


</RelativeLayout>