<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <carbon.widget.RelativeLayout
        android:id="@+id/rl_level_second"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_54sdp"
        android:layout_marginBottom="@dimen/_9sdp"
        android:background="@drawable/view_background_grey"
        android:backgroundTint="@color/mono_slate_10"
        android:backgroundTintMode="add"
        android:gravity="center"
        app:carbon_cornerRadius="@dimen/_10sdp">

        <carbon.widget.LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_84sdp"
            android:padding="@dimen/_10sdp"
            android:weightSum="1.5">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2">

                <ImageView
                    android:id="@+id/iv_level"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_centerInParent="true"
                    android:tint="@color/white"
                    android:contentDescription="level"
                    android:src="@drawable/iv_recovery" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_header1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:lineSpacingExtra="4sp"
                    android:singleLine="true"
                    android:text="Rowing (13)"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15ssp"
                    android:translationY="-2.2sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3">

                <ImageView
                    android:layout_width="@dimen/_6sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_centerInParent="true"
                    android:contentDescription="arrow"
                    android:scaleType="fitXY"
                    app:tint="@color/mono_grey_100"
                    android:src="@drawable/ic_right_arrow" />

            </RelativeLayout>
        </carbon.widget.LinearLayout>
    </carbon.widget.RelativeLayout>
</RelativeLayout>