<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="viewpager"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/tv_low_impact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_we_deliver"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:lineSpacingExtra="2sp"
            android:text=""
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_26ssp"
            android:translationY="-1.2sp" />

        <TextView
            android:id="@+id/tv_we_deliver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_we_deliver2"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:lineSpacingExtra="4sp"
            android:singleLine="false"
            android:text=""
            android:textAllCaps="true"
            android:textColor="@color/grey"
            android:textSize="@dimen/_15ssp"
            android:translationY="-2.2sp" />

        <TextView
            android:id="@+id/tv_we_deliver2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:lineSpacingExtra="4sp"
            android:singleLine="false"
            android:text=""
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_15ssp"
            android:translationY="-2.2sp" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>