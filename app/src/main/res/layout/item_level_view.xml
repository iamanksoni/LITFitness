<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <carbon.widget.RelativeLayout
        android:id="@+id/rl_level_second"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_84sdp"
        android:layout_marginBottom="@dimen/_9sdp"
        android:background="@drawable/view_background_grey"
        android:backgroundTint="@color/mono_slate_10"
        android:backgroundTintMode="add"
        android:gravity="center"
        app:carbon_cornerRadius="@dimen/_11sdp">

        <carbon.widget.LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_84sdp"
            android:padding="@dimen/_10sdp"
            android:weightSum="1.5">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2">

                <ImageView
                    android:id="@+id/iv_level"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="level"
                    android:src="@drawable/ic_level" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_header1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/futura_std_condensed"
                    android:lineSpacingExtra="4sp"
                    android:singleLine="true"
                    android:text="Advanced"
                    android:textAllCaps="true"
                    android:textColor="@color/red"
                    android:textSize="@dimen/_15ssp"
                    android:translationY="-2.2sp" />

                <TextView
                    android:id="@+id/tv_sub_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_header1"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:fontFamily="@font/sf_pro_display_regular"
                    android:lineSpacingExtra="3sp"
                    android:maxLines="2"
                    android:singleLine="false"
                    android:text="You could teach! Youâ€™ve been working out for years and want to try LIT Method workouts."
                    android:textColor="@color/mono_grey_60"
                    android:textSize="@dimen/_10ssp"
                    android:translationY="-1.69sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3">

                <ImageView
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="@dimen/_9sdp"
                    android:layout_centerInParent="true"
                    android:contentDescription="arrow"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_right_arrow" />

            </RelativeLayout>
        </carbon.widget.LinearLayout>
    </carbon.widget.RelativeLayout>
</RelativeLayout>