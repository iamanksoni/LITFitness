<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/_6sdp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_workout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1.3">

        <TextView
            android:id="@+id/tv_work_goal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/_3sdp"
            android:fontFamily="@font/futura_std_condensed_extra_bd"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/_13ssp" />

        <TextView
            android:id="@+id/tv_show_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:background="?attr/selectableItemBackground"
            android:fontFamily="@font/sf_pro_display_medium"
            android:gravity="right"
            android:singleLine="true"
            android:text="Show all"
            android:textColor="@color/red"
            android:textSize="@dimen/_13ssp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_home_workout_child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_workout_header"
        android:layout_marginTop="@dimen/_15sdp"
        android:textAllCaps="true" />

    <View
        android:id="@+id/vw_3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@+id/rv_home_workout_child"
        android:layout_marginTop="@dimen/_18sdp"
        android:layout_marginBottom="@dimen/_18sdp"
        android:background="#338F92A1" />
</RelativeLayout>