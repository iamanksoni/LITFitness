<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <carbon.widget.RelativeLayout
        android:id="@+id/rl_level_second"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_84sdp"
        android:layout_marginBottom="@dimen/_9sdp"
        android:background="@drawable/view_background_grey"
        android:backgroundTint="@color/mono_slate_10"
        android:backgroundTintMode="add"
        android:gravity="center"
        app:carbon_cornerRadius="@dimen/_11sdp">

        <carbon.widget.LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_84sdp"
            android:padding="@dimen/_10sdp"
            android:weightSum="1.5">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/rb_membership"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:scaleX="0.9"
                    android:scaleY="0.9"
                    app:buttonTint="@color/mono_grey_100" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_header1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/futura_std_condensed_bold"
                    android:lineSpacingExtra="4sp"
                    android:singleLine="true"
                    android:text="Monthly"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15ssp"
                    android:translationY="-2.2sp" />

                <TextView
                    android:id="@+id/tv_sub_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_header1"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:fontFamily="@font/sf_pro_display_regular"
                    android:lineSpacingExtra="3sp"
                    android:maxLines="2"
                    android:singleLine="false"
                    android:text="+ 30 day free trail"
                    android:textAllCaps="true"
                    android:textColor="@color/mono_grey_100"
                    android:textSize="@dimen/_10ssp"
                    android:translationY="-1.44sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center">

                <RelativeLayout
                    android:id="@+id/id_amount"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:id="@+id/tv_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/futura_std_condensed_extra_bd"
                        android:text="$25"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16ssp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:layout_toRightOf="@+id/tv_amount"
                        android:fontFamily="@font/futura_std_condensed_extra_bd"
                        android:text="/ m"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11ssp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/id_amount"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/sf_pro_display_regular"
                    android:text="$25 billed"
                    android:visibility="gone"
                    android:textColor="@color/mono_grey_60"
                    android:textSize="@dimen/_10ssp" />
            </RelativeLayout>

        </carbon.widget.LinearLayout>
    </carbon.widget.RelativeLayout>
</RelativeLayout>