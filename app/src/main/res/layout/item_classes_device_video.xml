<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <carbon.widget.LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_84sdp"
        android:weightSum="2.3">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <carbon.widget.ImageView
                android:id="@+id/iv_video"
                android:layout_width="@dimen/_140sdp"
                android:layout_height="@dimen/_67sdp"
                android:layout_centerHorizontal="true"
                android:contentDescription="video"
                android:elevation="@dimen/_1sdp"
                android:foreground="@drawable/gradient"
                android:src="@drawable/ic_video_screen"
                app:carbon_cornerRadius="@dimen/_7sdp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_5sdp">

            <TextView
                android:id="@+id/tv_header1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_std_condensed"
                android:lineSpacingExtra="4sp"
                android:singleLine="true"
                android:text="Set up the tech bands"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"
                android:translationY="-2.2sp" />

            <TextView
                android:id="@+id/tv_sub_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_header1"
                android:layout_marginTop="@dimen/_4sdp"
                android:fontFamily="@font/sf_pro_display_bold"
                android:lineSpacingExtra="3sp"
                android:maxLines="2"
                android:singleLine="false"
                android:text="2 min â€¢ intro"
                android:textAllCaps="true"
                android:textColor="@color/mono_grey_100"
                android:textSize="@dimen/_8ssp"
                android:translationY="-1.69sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3">

            <ImageView
                android:layout_width="@dimen/_5sdp"
                android:layout_height="@dimen/_9sdp"
                android:layout_centerInParent="true"
                android:contentDescription="arrow"
                android:scaleType="fitXY"
                android:src="@drawable/ic_right_arrow"
                />

        </RelativeLayout>
    </carbon.widget.LinearLayout>
</RelativeLayout>