<!--        android:transformPivotY="0dp" />-->

    <TextView
        android:id="@+id/tv_video_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_video_title"
        android:layout_marginTop="@dimen/_6sdp"
        android:fontFamily="@font/sf_pro_display_bold"
        android:lineSpacingExtra="6sp"
        android:singleLine="true"
        android:text="40 min"
        android:letterSpacing="0.025"

        android:textAllCaps="true"
        android:textColor="@color/mono_grey_100"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_video_title"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_toRightOf="@+id/tv_video_time"
        android:fontFamily="@font/sf_pro_display_bold"
        android:lineSpacingExtra="6sp"
        android:singleLine="true"
        android:textColor="@color/mono_grey_60"
        android:letterSpacing="0.025"

        android:text="•"
        android:textAllCaps="true"
        android:textSize="@dimen/_10ssp" />

    <TextView
        android:id="@+id/tv_intermediate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_video_title"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_toRightOf="@+id/tv_dot"
        android:fontFamily="@font/sf_pro_display_bold"
        android:lineSpacingExtra="6sp"
        android:singleLine="true"
        android:text="Intermediate"
        android:letterSpacing="0.025"
        android:textAllCaps="true"
        android:textColor="@color/orange"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_dot2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_video_title"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_toRightOf="@+id/tv_intermediate"
        android:fontFamily="@font/sf_pro_display_bold"
        android:lineSpacingExtra="6sp"
        android:singleLine="true"
        android:text="•"
        android:letterSpacing="0.025"
        android:textAllCaps="true"
        android:textColor="@color/mono_grey_60"
        android:textSize="@dimen/_10ssp" />

    <TextView
        android:id="@+id/tv_class_tp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_video_title"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_toRightOf="@+id/tv_dot2"
        android:fontFamily="@font/sf_pro_display_bold"
        android:lineSpacingExtra="6sp"
        android:singleLine="true"
        android:letterSpacing="0.025"
        android:textAllCaps="true"
        android:textColor="@color/blue_faded"
        android:textSize="10sp" />
</RelativeLayout>