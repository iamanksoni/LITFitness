<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_15sdp">

    <carbon.widget.RelativeLayout
        android:id="@+id/rl_level_second"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:layout_marginBottom="@dimen/_9sdp"
        android:backgroundTintMode="add"
        android:foreground="@drawable/gradient"
        app:carbon_cornerRadius="@dimen/_8sdp">

        <ImageView
            android:id="@+id/iv_new2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/iv_new"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/ic_new_tag"
            android:contentDescription="new tag"
            android:visibility="gone" />

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_video_thubline_inactive"
            android:contentDescription="video_thubline" />

    </carbon.widget.RelativeLayout>

    <TextView
        android:id="@+id/tv_video_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_level_second"
        android:layout_marginTop="@dimen/_11sdp"
        android:fontFamily="@font/futura_std_condensed"
        android:lineSpacingExtra="4sp"
        android:singleLine="false"
        android:text="Endurance Row with Tiffany"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/_13ssp"
        android:translationY="-2.2sp" />


    <ImageView
        android:id="@+id/simpleRatingBar"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_below="@+id/rl_level_second"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/_11sdp"
        android:layout_marginRight="22dp"
        android:contentDescription="filter"
        android:src="@drawable/ic_star_active" />
