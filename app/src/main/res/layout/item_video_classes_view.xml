<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_15sdp">

    <carbon.widget.RelativeLayout
        android:id="@+id/rl_level_second"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:layout_marginBottom="@dimen/_9sdp"
        android:backgroundTintMode="add"
        android:foreground="@drawable/gradient"
        app:carbon_cornerRadius="@dimen/_8sdp">

        <ImageView
            android:id="@+id/iv_new2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="fitXY" />
        <ImageView
            android:id="@+id/iv_new"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/ic_new_tag"
            android:contentDescription="new tag"
            android:visibility="gone" />

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_video_thubline_inactive"
            android:contentDescription="video_thubline" />

    </carbon.widget.RelativeLayout>

    <TextView
        android:id="@+id/tv_video_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_level_second"
        android:layout_marginTop="@dimen/_11sdp"
        android:fontFamily="@font/futura_std_medium"
        android:lineSpacingExtra="4sp"
        android:singleLine="false"
        android:text=""
        android:textAllCaps="true"
        android:textColor="@color/grey"
        android:textSize="@dimen/_13ssp"
        android:translationY="-2.2sp" />

    <TextView
        android:id="@+id/tv_video_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_video_title"
        android:layout_marginTop="@dimen/_6sdp"
        android:fontFamily="@font/sf_pro_display_bold"
        android:lineSpacingExtra="6sp"
        android:singleLine="true"
        android:text="40 min"
        android:textAllCaps="true"
        android:textColor="@color/mono_grey_100"
        android:textSize="@dimen/_10ssp" />

    <TextView
        android:id="@+id/tv_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_video_title"
        android:layout_toRightOf="@+id/tv_video_time"
        android:layout_marginTop="@dimen/_6sdp"
        android:lineSpacingExtra="6sp"
        android:singleLine="true"
        android:fontFamily="@font/sf_pro_display_bold"
        android:text="•"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:textAllCaps="true"
        android:textColor="@color/mono_grey_100"
        android:textSize="@dimen/_10ssp"
        />

    <TextView
        android:id="@+id/tv_intermediate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_video_title"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_toRightOf="@+id/tv_dot"
        android:fontFamily="@font/sf_pro_display_bold"
        android:lineSpacingExtra="6sp"
        android:singleLine="true"
        android:text="Intermediate"
        android:textAllCaps="true"
        android:textColor="@color/orange"
        android:textSize="@dimen/_10ssp" />


    <TextView
        android:id="@+id/tv_dot2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_video_title"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_toRightOf="@+id/tv_intermediate"
        android:fontFamily="@font/sf_pro_display_bold"
        android:lineSpacingExtra="6sp"
        android:singleLine="true"
        android:text="•"
        android:textAllCaps="true"
        android:textColor="@color/mono_grey_100"
        android:textSize="@dimen/_10ssp" />

    <TextView
        android:id="@+id/tv_class_tp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_video_title"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_toRightOf="@+id/tv_dot2"
        android:fontFamily="@font/sf_pro_display_bold"
        android:lineSpacingExtra="6sp"
        android:singleLine="true"
        android:textAllCaps="true"
        android:textColor="@color/blue_faded"
        android:textSize="@dimen/_10ssp" />
</RelativeLayout>