<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_160sdp"
    android:layout_marginBottom="@dimen/_15sdp">
    <carbon.widget.RelativeLayout
        android:id="@+id/rl_level_second"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:layout_marginBottom="@dimen/_9sdp"
        android:backgroundTintMode="add"
        android:foreground="@drawable/gradient"
        app:carbon_cornerRadius="@dimen/_8sdp">


        <ImageView
            android:id="@+id/iv_new2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="fitXY" />
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_video_thubline_inactive"
            android:contentDescription="video_thubline" />



    </carbon.widget.RelativeLayout>
    <TextView
        android:id="@+id/tv_video_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/futura_std_medium"
        android:lineSpacingExtra="4sp"
        android:singleLine="false"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:text="Exercise Glossary"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp"
        android:translationY="-2.2sp"
        android:padding="@dimen/_8sdp"/>
</RelativeLayout>