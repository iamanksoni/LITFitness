<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_taken_by_me"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginRight="@dimen/_8sdp"
        app:cardBackgroundColor="#0D8F92A1"
        app:cardCornerRadius="@dimen/_8sdp"
        app:contentPadding="@dimen/_14sdp"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tv_child_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_std_condensed"
                android:lineSpacingExtra="-1sp"
                android:singleLine="true"
                android:text="Advanced"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_11ssp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <carbon.widget.RelativeLayout
        android:id="@+id/rl_injury"
        android:layout_width="@dimen/_69sdp"
        android:layout_height="@dimen/_90sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:background="@drawable/view_background_grey"
        android:backgroundTintMode="add"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_injury_image"
            android:layout_width="@dimen/_33sdp"
            android:layout_height="@dimen/_33sdp"
            android:layout_centerHorizontal="true"
            android:contentDescription="injury"
            android:src="@drawable/ic_chest" />

        <TextView
            android:id="@+id/tv_injury_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_injury_image"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:fontFamily="@font/futura_std_condensed_extra_bd"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp" />

    </carbon.widget.RelativeLayout>

    <carbon.widget.RelativeLayout
        android:id="@+id/rl_instructor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_8sdp">
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_instructor"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_120sdp"
            android:layout_marginRight="@dimen/_8sdp"
            app:cardCornerRadius="@dimen/_13sdp"
            app:cardPreventCornerOverlap="true">
            <ImageView
                android:id="@+id/iv_instructor_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:contentDescription="instructor"
                android:src="@drawable/ic_profle_image"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_instructor_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cv_instructor"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_8sdp"
            android:fontFamily="@font/futura_std_condensed"
            android:lineSpacingExtra="-1sp"
            android:singleLine="true"
            android:text="Matt"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />
    </carbon.widget.RelativeLayout>
</RelativeLayout>