<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.akexorcist.roundcornerprogressbar.TextRoundCornerProgressBar
            android:id="@+id/trp_rating"
            android:layout_width="0dp"
            android:layout_height="@dimen/_44sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_weight="1"
            android:visibility="visible"
            app:rcAnimationEnable="true"
            app:rcAnimationSpeedScale="1"
            app:rcBackgroundColor="#1A01CCF9"

            app:rcProgressColor="#52CFC5"
            app:rcRadius="@dimen/_8sdp"
            app:rcTextInsideGravity="start"
            app:rcTextProgress="@string/airplane_mode"
            app:rcTextProgressColor="@color/red"
            app:rcTextProgressSize="@dimen/_27sdp" />

        <com.akexorcist.roundcornerprogressbar.TextRoundCornerProgressBar
            android:id="@+id/trp_rating_2"
            android:layout_width="0dp"
            android:layout_height="@dimen/_44sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_weight="1"
            android:text="45455"
            android:visibility="visible"
            app:rcAnimationEnable="true"
            app:rcAnimationSpeedScale="1"
            app:rcBackgroundColor="#1AF95A01"

            app:rcProgressColor="@color/orange"
            app:rcRadius="@dimen/_8sdp"
            />
    </LinearLayout>
</layout>