<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <carbon.widget.RelativeLayout
        android:id="@+id/rl_level_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTintMode="add"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/_9sdp"
        app:carbon_cornerRadius="@dimen/_11sdp">
        <carbon.widget.LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1.4">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start"
                android:padding="@dimen/_10sdp">

                <TextView
                    android:id="@+id/tv_header1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/futura_std_condensed_bold"
                    android:lineSpacingExtra="4sp"
                    android:singleLine="true"
                    android:text="Lit strength machine"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    />

                <TextView
                    android:id="@+id/tv_sub_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_header1"
                    android:fontFamily="@font/futura_std_condensed"
                    android:lineSpacingExtra="3sp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:text="Tap to connect"
                    android:textAllCaps="true"
                    android:textColor="@color/mono_grey_60"
                    android:textSize="@dimen/_11ssp"
                     />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/iv_level"
                    android:gravity="end"
                    android:layout_centerVertical="true"
                    android:layout_width="80dp"
                    android:layout_height="@dimen/_40sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_equpment" />
            </RelativeLayout>
        </carbon.widget.LinearLayout>
    </carbon.widget.RelativeLayout>
</RelativeLayout>