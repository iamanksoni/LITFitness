<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bluetooth_background"
    android:clipToOutline="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/upperHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bluetooth_top_background"
        android:clipToOutline="true"
        android:padding="12dp">

        <ImageView
            android:id="@+id/bluetoothIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_bluetooth_24"
            app:tint="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/bluetoothIcon"
            android:fontFamily="@font/futura_std_condensed"
            android:text="CONNECTED DEVICES"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/upperHeader"
        android:layout_marginBottom="25dp"
        android:padding="20dp"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_std_condensed"
                android:text="DEVICES"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/white_background_box"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="10dp"
                android:paddingStart="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/futura_std_condensed_bold"
                    android:text="LIT AXIS"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/futura_std_condensed"
                    android:text="TAP TO CONNECT"
                    android:textColor="#94DEFB"
                    android:textSize="14sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/white_background_box"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="10dp"
                android:paddingStart="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/futura_std_condensed_bold"
                    android:text="LIT Heart Rate Sensor"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/futura_std_condensed"
                    android:text="TAP TO CONNECT"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/white_background_box"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="10dp"
                android:paddingStart="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/futura_std_condensed_bold"
                    android:text="LIT Rowing Machine"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/futura_std_condensed"
                    android:text="TAP TO CONNECT"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </LinearLayout>


        </LinearLayout>

        </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clipToOutline="true"

        android:layout_alignParentBottom="true"
        android:padding="5dp"
        android:background="@drawable/bluetooth_bottom_background">


        <TextView
            android:id="@+id/bt_cancel"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:fontFamily="@font/futura_std_condensed"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:textAlignment="center"
            android:text="Cancel"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:background="@drawable/button_background"
            android:textColor="@color/black" />

    </RelativeLayout>







</RelativeLayout>